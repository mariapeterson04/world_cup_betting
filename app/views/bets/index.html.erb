<div class="page-header">
  <h1>
    Bets
    <a href="/bets/new" class="btn btn-lg btn-success">New Bet</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "bets_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :bet_team_one, "Bet team one" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :bet_team_one_gteq, :class => "form-control", :placeholder => "Bet team one greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :bet_team_one_lteq, :class => "form-control", :placeholder => "Bet team one less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :username_cont, "Username contains" %>
    <%= f.text_field :username_cont, :class => "form-control", :placeholder => "Username contains" %>
  </div>

<div class="form-group">
  <%= f.label :rank, "Rank" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :rank_gteq, :class => "form-control", :placeholder => "Rank greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :rank_lteq, :class => "form-control", :placeholder => "Rank less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :user_score, "User score" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :user_score_gteq, :class => "form-control", :placeholder => "User score greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :user_score_lteq, :class => "form-control", :placeholder => "User score less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :bet_team_two, "Bet team two" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :bet_team_two_gteq, :class => "form-control", :placeholder => "Bet team two greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :bet_team_two_lteq, :class => "form-control", :placeholder => "Bet team two less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
      <%= f.label :matches_group_team_one_cont, "MatchesGroup team_one contains" %>
      <%= f.text_field :matches_group_team_one_cont, :class => "form-control", :placeholder => "MatchesGroup team_one contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/bets" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#bets_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Bet team one</th>
        <th>Bet team two</th>
        <th>User</th>
        <th>Matches group</th>
        <th>User score</th>
        <th>Rank</th>
        <th>Username</th>
        <th>Actions</th>
      </tr>

      <% @bets.each do |bet| %>
      <tr>
        <td><%= bet.bet_team_one %></td>
        <td><%= bet.bet_team_two %></td>
        <td>
          <% if bet.user.present? %>
            <a href="/users/<%= bet.user.id %>">
              <%= bet.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if bet.matches_group.present? %>
            <a href="/matches_groups/<%= bet.matches_group.id %>">
              <%= bet.matches_group.team_one %>
            </a>
          <% end %>
        </td>
        <td><%= bet.user_score %></td>
        <td><%= bet.rank %></td>
        <td><%= bet.username %></td>
        <td>
          <a href="/bets/<%= bet.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == bet.user %>
            <a href="/bets/<%= bet.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_bet/<%= bet.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bets, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
