<!-- Validation failure messages -->
<% if @bets_group.errors.any? %>
  <% @bets_group.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Bets Group #<%= @bets_group.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_bets_group/<%= @bets_group.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @bets_group.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for match_id -->
      <div class="form-group">
        <label for="match_id" class="control-label">
          Match
        </label>

        <%= select_tag(:match_id, options_from_collection_for_select(MatchesGroup.all, :id, :team_one, @bets_group.match_id), :class => "form-control") %>
      </div>

      <!-- Label and input for bet_team_one -->
      <div class="form-group">
        <label for="bet_team_one" class="control-label">
          Bet team one
        </label>

        <input type="text" id="bet_team_one" name="bet_team_one" placeholder="Bet team one" class="form-control" value="<%= @bets_group.bet_team_one %>">
      </div>

      <!-- Label and input for bet_team_two -->
      <div class="form-group">
        <label for="bet_team_two" class="control-label">
          Bet team two
        </label>

        <input type="text" id="bet_team_two" name="bet_team_two" placeholder="Bet team two" class="form-control" value="<%= @bets_group.bet_team_two %>">
      </div>

      <!-- Label and input for team_one -->
      <div class="form-group">
        <label for="team_one" class="control-label">
          Team one
        </label>

        <input type="text" id="team_one" name="team_one" placeholder="Team one" class="form-control" value="<%= @bets_group.team_one %>">
      </div>

      <!-- Label and input for team_two -->
      <div class="form-group">
        <label for="team_two" class="control-label">
          Team two
        </label>

        <input type="text" id="team_two" name="team_two" placeholder="Team two" class="form-control" value="<%= @bets_group.team_two %>">
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @bets_group.date %>">
      </div>

      <!-- Label and input for winner -->
      <div class="form-group">
        <label for="winner" class="control-label">
          Winner
        </label>

        <input type="text" id="winner" name="winner" placeholder="Winner" class="form-control" value="<%= @bets_group.winner %>">
      </div>

      <button class="btn btn-warning">
        Update Bets Group
      </button>
      or
      <a href="/bets_groups/<%= @bets_group.id %>">Cancel</a>
    </form>
  </div>
</div>
