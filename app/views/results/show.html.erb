<div class="page-header">
  <h3>Result #<%= @result.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Users score</dt>
      <dd><%= @result.users_score %></dd>

      <dt>Rank</dt>
      <dd><%= @result.rank %></dd>

      <dt>Username</dt>
      <dd><%= @result.username %></dd>

      <dt>Bet</dt>
      <dd>
        <% if @result.bet.present? %>
          <a href="/bets_groups/<%= @result.bet_id %>">
            <%= @result.bet.user_id %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/results" class="btn btn-primary">
        Back
      </a>
      <a href="/results/<%= @result.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_result/<%= @result.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
